" Pathogen
execute pathogen#infect()

" Indentation
set smartindent
set autoindent
set tabstop=2
set shiftwidth=2


" Files, backup
set nobackup
set nowb
set noswapfile
filetype plugin on 

" Colors and fonts
syntax enable
set background=dark
colorscheme molokai

" Window
set ruler
set number

" Encoding
set encoding=utf8

" Param Jshint bundle
let g:jshint2_save = 1
