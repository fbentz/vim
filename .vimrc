" Pathogen
execute pathogen#infect()

" Indentation
set smartindent
set autoindent
set tabstop=2
set shiftwidth=2


" Files, backup
set nobackup
set nowb
set noswapfile
filetype plugin on 

" Colors and fonts
let g:solarized_termcolors=256
let g:solarized_contrast="high"
syntax enable
set background=dark
colorscheme solarized

" Window
set ruler
set number
" Encoding
set encoding=utf8
